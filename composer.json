{
  "name": "scholarly/providers",
  "description": "Unified PHP SDK for scholarly data providers with adapters, caching, and graph exporter.",
  "type": "library",
  "license": "MIT",
  "homepage": "https://github.com/mbsoft31/scholarly-providers",
  "support": {
    "issues": "https://github.com/mbsoft31/scholarly-providers/issues",
    "source": "https://github.com/mbsoft31/scholarly-providers"
  },
  "keywords": [
    "scholarly",
    "openalex",
    "crossref",
    "semantic scholar",
    "citation",
    "graph",
    "laravel",
    "sdk"
  ],
  "require": {
    "php": "^8.3",
    "psr/http-client": "^1.0",
    "psr/http-factory": "^1.0",
    "psr/http-message": "^1.1",
    "psr/log": "^3.0",
    "psr/cache": "^3.0",
    "psr/simple-cache": "^3.0",
    "ext-json": "*",
    "ext-curl": "*",
    "mbsoft31/graph-core": "^1.0",
    "mbsoft31/graph-algorithms": "^1.0"
  },
  "require-dev": {
    "pestphp/pest": "^2.0",
    "pestphp/pest-plugin-type-coverage": "^2.0",
    "pestphp/pest-plugin-mutate": "^2.0@beta",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.50",
    "symfony/var-dumper": "^7.1",
    "nyholm/psr7": "^1.8",
    "symfony/http-client": "^7.1",
    "php-http/mock-client": "^1.6",
    "mockery/mockery": "^1.6",
    "fakerphp/faker": "^1.23",
    "vlucas/phpdotenv": "^5.6",
    "orchestra/testbench": "^9.0"
  },
  "autoload": {
    "psr-4": {
      "Scholarly\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Scholarly\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "@php vendor/bin/pest",
    "test-coverage": "@php vendor/bin/pest --coverage",
    "test-parallel": "@php vendor/bin/pest --parallel",
    "test-type-coverage": "@php vendor/bin/pest --type-coverage --min=90",
    "stan": "@php vendor/bin/phpstan analyse",
    "cs-fix": "@php vendor/bin/php-cs-fixer fix",
    "cs-check": "@php vendor/bin/php-cs-fixer fix --dry-run --diff",
    "quality": [
      "@test",
      "@stan",
      "@cs-check"
    ],
    "post-install-cmd": [
      "@php build/scripts/post-install.php"
    ],
    "post-update-cmd": [
      "@php build/scripts/post-install.php"
    ]
  },
  "config": {
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "php-http/discovery": true,
      "pestphp/pest-plugin": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "version": "1.0.0"
}
